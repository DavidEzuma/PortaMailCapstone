  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="-0.20717 0.24396 0.08439" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="left_wheel" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- ============================================ -->
  <!-- RIGHT WHEEL -->
  <!-- ============================================ -->
  <link name="right_wheel">
    <inertial>
      <origin xyz="-5.00000000092093E-06 -0.000309216983811395 -0.248563206918676" rpy="0 0 0" />
      <mass value="1.17786999665304" />
      <inertia
        ixx="0.00225813562809636"
        ixy="-3.2240422475964E-33"
        ixz="6.35641910110874E-18"
        iyy="0.00225813562809636"
        iyz="-1.04456085598386E-18"
        izz="0.00439239332846706" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://portamail_navigator/meshes/right_wheel.STL" />
      </geometry>
      <material name="">
        <color rgba="0.250980392156863 0.250980392156863 0.250980392156863 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://portamail_navigator/meshes/right_wheel.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="-0.20717 -0.25408 0.084386" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="right_wheel" />
    <axis xyz="0 0 -1" />
  </joint>

  <!-- ============================================ -->
  <!-- CASTER SWIVEL -->
  <!-- ============================================ -->
  <link name="caster_swivel">
    <inertial>
      <origin xyz="-0.010025817396546 -0.000341002844053785 -0.0141426235576368" rpy="0 0 0" />
      <mass value="0.0207150422696725" />
      <inertia
        ixx="1.66647080870315E-05"
        ixy="-1.61273485125663E-07"
        ixz="-3.37716878778582E-06"
        iyy="1.41653051172085E-05"
        iyz="-3.8830017129783E-08"
        izz="1.66086319394758E-05" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://portamail_navigator/meshes/caster_swivel.STL" />
      </geometry>
      <material name="">
        <color rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://portamail_navigator/meshes/caster_swivel.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="caster_swivel_joint" type="continuous">
    <origin xyz="0.25024 -6.9235E-05 0.073856" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="caster_swivel" />
    <axis xyz="0 0 -1" />
  </joint>

  <!-- ============================================ -->
  <!-- CASTER WHEEL -->
  <!-- ============================================ -->
  <link name="caster_wheel">
    <inertial>
      <origin xyz="0 0 6.93889390390723E-18" rpy="0 0 0" />
      <mass value="0.0661095439760222" />
      <inertia
        ixx="2.65274021094605E-05"
        ixy="-8.53413928790277E-22"
        ixz="1.19173199824834E-19"
        iyy="2.65274021094605E-05"
        iyz="5.62680425214823E-22"
        izz="4.2998993312912E-05" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://portamail_navigator/meshes/caster_wheel.STL" />
      </geometry>
      <material name="">
        <color rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://portamail_navigator/meshes/caster_wheel.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="caster_wheel_joint" type="continuous">
    <origin xyz="-0.0294640000000008 0 -0.0466424325660239" rpy="1.5707963267949 0 0" />
    <parent link="caster_swivel" />
    <child link="caster_wheel" />
    <axis xyz="0 0 -1" />
  </joint>

  <!-- ============================================ -->
  <!-- LASER LINK (RPLIDAR A2) -->
  <!-- ============================================ -->
  <!-- Virtual link for laser mounting - simplified for both hardware and Gazebo -->
  <link name="laser">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.125" />
      <inertia
        ixx="0.001"
        ixy="0"
        ixz="0"
        iyy="0.001"
        iyz="0"
        izz="0.001" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.04" length="0.05"/>
      </geometry>
      <material name="laser_red">
        <color rgba="0.8 0.2 0.2 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.04" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <joint name="laser_joint" type="fixed">
    <!-- Position matches your hardware mounting -->
    <origin xyz="0.1 0.0 0.15" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="laser" />
  </joint>

  <!-- ============================================ -->
  <!-- GAZEBO HARMONIC PLUGINS (Only active in gz-sim) -->
  <!-- ============================================ -->

  <!-- Differential Drive Controller for Gazebo Harmonic -->
  <gazebo>
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.498</wheel_separation>
      <wheel_radius>0.0325</wheel_radius>
      <odom_publish_frequency>50</odom_publish_frequency>
      <max_linear_acceleration>1.0</max_linear_acceleration>
      <max_angular_acceleration>2.0</max_angular_acceleration>
      <max_linear_velocity>0.89</max_linear_velocity>
      <max_angular_velocity>1.0</max_angular_velocity>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
  </gazebo>

  <!-- RPLIDAR A2 Sensor Plugin for Gazebo Harmonic -->
  <gazebo reference="laser">
    <sensor name="rplidar_sensor" type="gpu_lidar">
      <topic>/scan</topic>
      <update_rate>10</update_rate>
      <lidar>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159265</min_angle>
            <max_angle>3.14159265</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.15</min>
          <max>12.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </lidar>
      <always_on>1</always_on>
      <visualize>true</visualize>
    </sensor>
  </gazebo>

  <!-- Gazebo Material Properties -->
  <gazebo reference="base_link">
    <material>Gazebo/Grey</material>
    <visual>
      <geometry>
        <box>
          <size>0.4 0.3 0.2</size>
        </box>
      </geometry>
    </visual>
  </gazebo>

  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <visual>
      <geometry>
        <cylinder>
          <radius>0.0325</radius>
          <length>0.04</length>
        </cylinder>
      </geometry>
    </visual>
  </gazebo>

  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <visual>
      <geometry>
        <cylinder>
          <radius>0.0325</radius>
          <length>0.04</length>
        </cylinder>
      </geometry>
    </visual>
  </gazebo>

  <gazebo reference="caster_wheel">
    <material>Gazebo/Grey</material>
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <visual>
      <geometry>
        <sphere>
          <radius>0.02</radius>
        </sphere>
      </geometry>
    </visual>
  </gazebo>

  <gazebo reference="laser">
    <material>Gazebo/Red</material>
  </gazebo>

</robot>
