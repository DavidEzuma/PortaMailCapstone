  </link>

  <!-- ============================================ -->
  <!-- LEFT WHEEL -->
  <!-- ============================================ -->
  <link name="left_wheel">
    <inertial>
      <origin xyz="-5.00000000008827E-06 -0.000622719000890976 0.00272000000000006" rpy="0 0 0" />
      <mass value="0.588934998326518" />
      <inertia
        ixx="0.00112906781404818"
        ixy="-1.46165672188879E-34"
        ixz="3.72586046656329E-18"
        iyy="0.00112906781404818"
        iyz="1.19226945933937E-20"
        izz="0.00219619666423353" />
